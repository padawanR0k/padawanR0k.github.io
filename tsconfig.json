{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "next.config.mjs",
    "./pre-deploy.tsx"
  ],
  "exclude": ["node_modules"],
  "ts-node": {
    "swc": true,
    "files": true,
    "compilerOptions": {
      "module": "ESNext",
      "moduleResolution": "NodeNext",
      "jsx": "react"
    }
  }
}
